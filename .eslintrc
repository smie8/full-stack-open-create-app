{
  "extends": [
    "airbnb",
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "semi": [
      "error",
      "never"
    ],
    "linebreak-style": 0,
    "max-len": [1, 200],
    "no-shadow": 0,
    "no-plusplus": 0,
    "import/no-unresolved": "off",
    "react/jsx-filename-extension": "off",
    "react/prop-types": [
      1,
      {
        "skipUndeclared": true
      }
    ],
    "prefer-arrow-callback": "off",
    "no-undef": "off",
    "func-names": "off",
    "no-console": "off",
    "react/display-name": "off",
    "spaced-comment": "off"
  },
  "globals": {
    "cy": true
  }
}